<div id="<%= dom_id post %>" class="p-2  <%= post.published? ? 'bg-green-100' : 'bg-red-100' %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email_address %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= post.published %>
  </p>

</div>
